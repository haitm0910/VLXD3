<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/order_product_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:contentDescription="Ảnh sản phẩm"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm (Order)"
            android:textColor="#333333"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/order_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SL: 1"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/order_product_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000 đ/sản phẩm"
                android:textColor="#333333"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/order_product_total_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="100.000 đ"
        android:textColor="#C50000"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="Mã ĐH: "/>
            <TextView
                android:id="@+id/tv_admin_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ORD#123"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_admin_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-05-23"
                android:textColor="#666666"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/account"
                android:contentDescription="Người đặt"
                android:layout_marginEnd="8dp"
                app:tint="#606060"/>
            <TextView
                android:id="@+id/tv_admin_customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nguyễn A"
                android:textColor="#333333"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_admin_customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456789"
                android:textColor="#666666"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="Trạng thái: "/>
            <TextView
                android:id="@+id/tv_admin_order_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chờ xác nhận"
                android:textColor="#FF9800"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_admin_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.230.000 đ"
                android:textColor="#C50000"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_admin_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết"
                android:textSize="12sp"
                android:backgroundTint="#6DA0C1"
                android:textColor="@android:color/white"
                android:minHeight="36dp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_admin_change_status_to_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển đang giao"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:minHeight="36dp"
                android:paddingHorizontal="16dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
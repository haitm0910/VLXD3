<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/admin_flash_sale_product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admin_flash_sale_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm Flash Sale"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/admin_flash_sale_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá gốc"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/admin_flash_sale_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá sale"
                    android:textColor="#C50000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/admin_flash_sale_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bắt đầu: 2025-05-23"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/admin_flash_sale_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kết thúc: 2025-05-30"
                android:textColor="#666666"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/editFlashSaleButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_icon"
                android:contentDescription="Sửa Flash Sale"
                app:tint="#2196F3"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/deleteFlashSaleButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/close"
                android:contentDescription="Xóa Flash Sale"
                app:tint="#F44336"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>